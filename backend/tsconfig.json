{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "./",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext",
        "module": "CommonJS",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true
    }
}